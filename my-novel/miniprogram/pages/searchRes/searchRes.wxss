#search-res_view {
  overflow: hidden;
  margin: 0;
  padding: 0;
}

#search-res_list {
  padding: 20rpx;

}

.res-card {
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  background-color: #fff;
  margin-bottom: 30rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  color: rgb(150, 150, 150);
}

.res-card .left {
  height: 220rpx;
  width: 160rpx;
  padding: 20rpx;
  padding-left: 0;
}

.res-card .left view {
  border: 1rpx solid rgb(235, 235, 235);
  width: 100%;
  height: 100%;
  text-align: center;
  border-radius: 10rpx;
  font-size: 26rpx;
  line-height: 220rpx;
}

.res-card .left image {
  height: 220rpx;
  width: 160rpx;
  border-radius: 10rpx;
  border: 1rpx solid rgb(235, 235, 235);
}

.res-card .right {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 10rpx 20rpx 20rpx 0;
  font-size: 24rpx;
}

.right view {
  margin: 6rpx 0;
}

.right .title {
  font-size: 32rpx;
  color: blue;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.right view text {
  color: #000;
}

.right .desc {
  overflow:hidden;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:3;
  color: rgb(97, 97, 97);
}

.right .wordCount {
  display: inline-block;
  vertical-align: middle;
  font-size: 22rpx;
}