/* pages/reading/reading.wxss */

#novel-reading_view {
  box-sizing: border-box;
  width: 100%;
}

.reading-hd {
  height: 100rpx;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.85);
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  z-index: 999;
}

.reading-bd {
  box-sizing: border-box;
  padding: 32rpx;
  font-size: 0;
  display: inline-block;
}

.chapter-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 2.2;
}

.chapter-content {
  display: inline-block;
  line-height: 2;
  font-size: 30rpx;
  text-indent: 64rpx;
  word-break: break-all;
}

.reading-ft {
  height: 200rpx;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.85);
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  z-index: 999;
}

.progress {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  vertical-align: middle;
  height: 80rpx;
  padding: 0 10rpx;
}

.progress text {
  font-size: 26rpx;
  color: #fff;
  display: inline-block;
  width: 100rpx;
  margin: 20rpx;
}

.progress-line {
  flex: 1;
  width: calc(100% - 200rpx);
  overflow: hidden;
  padding: 4rpx;
}

.showBar {
  display: none;
}

.tabList {
  flex: 1;
  display: flex;
  justify-content: space-around;
  align-items: center;
  vertical-align: middle;
  font-size: 26rpx;
  color: #fff;
}

.tabList view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.tabList view text {
  padding-top: 12rpx;
}

/* 目录 */
#contList {
  overflow: hidden;
  position: fixed;
  width: 82%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.85);
  z-index: 99;
  left: -82%;
  top: 0;
  transition: 0.5s all;
  color: rgb(243, 243, 243);
  font-size: 30rpx;
}

.showContList {
  transform: translateX(100%);
}

.con_hd {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0 30rpx 30rpx;
  background-color: #000;
}

.book-name {
  font-size: 30rpx;
  color: #fff;
}

.list {
  overflow: scroll;
  height: 100%;
}

.cont_title {
  font-size: 30rpx;
  line-height: 2;
  background-color: #000;
  padding: 0 0 10rpx 30rpx;
  color: rgb(21, 95, 255);
}

.cont-item_li {
  padding-left: 30rpx;
  font-size: 26rpx;
  line-height: 2.8;
  letter-spacing: 2rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  border-bottom: 1rpx solid rgba(240, 240, 240, 0.15);
}

.length-tag {
  background-color: rgba(243, 243, 243, 0.2);
  border-top-left-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
  padding-left: 18rpx;
  font-size: 26rpx;
}